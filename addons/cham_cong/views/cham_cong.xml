<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_cham_cong_form" model="ir.ui.view">
        <field name="name">cham.cong.form</field>
        <field name="model">cham_cong</field>
        <field name="arch" type="xml">
            <form string="Chấm Công Nhân Viên">
                <group>
                    <button name="action_check_in" type="object" string="Check-in" class="oe_highlight"/>
                </group>
                <group>
                    <button name="action_check_out" type="object" string="Check-out" class="oe_highlight"/>
                </group>
                <group>
                    <group>
                        <field name="nhan_vien_id"/>
                        <!-- <field name="dang_ky_lam_viec_id"/> -->
                        <field name="ngay_lam"/>
                        <field name="gio_check_in"/>
                        <field name="gio_check_out"/>
                        <field name="trang_thai_lam_viec" readonly="1"/>
                    </group>
                    <group>
                        <field name="ma_dinh_danh"/>
                        <!-- <field name="ngay_lam_da_dang_ky"/> -->
                        <!-- <field name="gio_bat_dau_dang_ky"/>
                        <field name="gio_ket_thuc_dang_ky"/> -->
                        <field name="trang_thai_check_in" readonly="1"/>
                        <field name="trang_thai_check_out" readonly="1"/>
                        <field name="thoi_gian_lam_viec" readonly="1"/>
                    </group>
                </group>
                <group>
                    <group>
                        <field name="phut_di_lam_som" readonly="1"/>
                        <field name="phut_di_lam_muon" readonly="1"/>
                    </group>
                </group>
                <group>
                    <field name="ghi_chu" readonly="1"/>
                </group>
                <group>
                    <field name="buoi_lam_viec"/>
                    <field name="thoi_gian_bat_dau"/>
                    <field name="thoi_gian_ket_thuc"/>
                </group>
                <notebook>
                    <page string="Lịch Sử Chấm Công">
                        <field name="lich_su_cham_cong_ids">
                            <tree>
                                <field name="ngay_lam"/>
                                <field name="gio_check_in"/>
                                <field name="gio_check_out"/>
                                <field name="ghi_chu"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Đếm ngày công">
                        <group>
                            <field name="dem_ngay_cong_id" invisible="1"/>
                            <field name="so_ngay_cong" readonly="1"/>
                            <field name="so_ngay_di_muon" readonly="1"/>
                        </group>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="view_cham_cong_tree" model="ir.ui.view">
        <field name="name">cham.cong.tree</field>
        <field name="model">cham_cong</field>
        <field name="arch" type="xml">
            <tree string="Chấm Công Nhân Viên">
                <field name="nhan_vien_id"/>
                <field name="phong_ban_id" readonly="1"/>
                <field name="chuc_vu_id" readonly="1"/>
                <field name="ngay_lam"/>
                <field name="gio_check_in"/>
                <field name="gio_check_out"/>
                <field name="trang_thai_lam_viec"/>
                <field name="ghi_chu"/>
            </tree>
        </field>
    </record>

    <record id="view_cham_cong_search" model="ir.ui.view">
        <field name="name">cham.cong.search</field>
        <field name="model">cham_cong</field>
        <field name="arch" type="xml">
            <search>
                <searchpanel>
                    <field name="nhan_vien_id"/>
                    <field name="phong_ban_id"/>
                    <field name="chuc_vu_id"/>
                </searchpanel>

                <field name="nhan_vien_id"/>
                <field name="ngay_lam"/>
                <field name="trang_thai_lam_viec"/>

                <filter name="draft" string="Nháp" domain="[('trang_thai_lam_viec', '=', 'draft')]"/>
                <filter name="approved" string="Đã Xác Nhận" domain="[('trang_thai_lam_viec', '=', 'approved')]"/>
                <filter name="cancelled" string="Đã Hủy" domain="[('trang_thai_lam_viec', '=', 'cancel')]"/>
            </search>
        </field>
    </record>

    <record id="action_cham_cong" model="ir.actions.act_window">
        <field name="name">Chấm Công Nhân Viên</field>
        <field name="res_model">cham_cong</field>
        <field name="view_mode">tree,form,search</field>
        <field name="search_view_id" ref="view_cham_cong_search"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Nhấn vào &quot;Tạo&quot; để thêm chấm công mới.
            </p>
        </field>

    </record>
</odoo>





