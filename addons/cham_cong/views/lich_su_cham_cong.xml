<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_lich_su_cham_cong_tree" model="ir.ui.view">
        <field name="name">lich.su.cham.cong.tree</field>
        <field name="model">lich_su_cham_cong</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nhan_vien_id"/>
                <!-- <field name="phong_ban_id"/>
                <field name="chuc_vu_id"/> -->
                <field name="ngay_lam"/>
                <field name="ghi_chu"/>
            </tree>
        </field>
    </record>

    <record id="view_lich_su_cham_cong_form" model="ir.ui.view">
        <field name="name">lich.su.cham.cong.form</field>
        <field name="model">lich_su_cham_cong</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="nhan_vien_id"/>
                        <!-- <field name="phong_ban_id"/>
                        <field name="chuc_vu_id"/> -->
                        <field name="ngay_lam"/>
                        <field name="gio_check_in"/>
                        <field name="gio_check_out"/>
                        <field name="thoi_gian_lam_viec"/>
                        <field name="ghi_chu"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_lichh_su_cham_cong_search" model="ir.ui.view">
        <field name="name">lich.su.cham.cong.search</field>
        <field name="model">lich_su_cham_cong</field>
        <field name="arch" type="xml">
            <search>
                <searchpanel>
                    <field name="nhan_vien_id"/>
                    <!-- <field name="phong_ban_id"/>
                    <field name="chuc_vu_id"/> -->
                </searchpanel>

                <field name="nhan_vien_id"/>
                <field name="ngay_lam"/>
            </search>
        </field>
    </record>
    
    <record id="action_lich_su_cham_cong" model="ir.actions.act_window">
        <field name="name">Lịch Sử Chấm Công</field>
        <field name="res_model">lich_su_cham_cong</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Không có bản ghi nào. Chấm công nhân viên để tạo dữ liệu lịch sử.
            </p>
        </field>
    </record>
</odoo>
